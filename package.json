{
  "name": "koaVote",
  "version": "0.13.0",
  "repository": "https://github.com/marcusoftnet/koaVote",
  "description": "A very simple voting site",
  "main": "app.js",
  "scripts": {
    "test": "./node_modules/mocha/bin/mocha --harmony-generators -u bdd -R spec",
    "test:watch": "./node_modules/mocha/bin/mocha --harmony-generators -w -u bdd -R dot",
    "start": "./node_modules/nodemon/bin/nodemon.js --harmony app.js prod",
    "startLocal": "nodemon --harmony -e html --watch views app.js",
    "push:github": "git push --tags origin HEAD:master",
    "push:heroku": "git push heroku master",
    "deploy:prod": "npm t && npm version minor && npm run push:github && npm run push:heroku"
  },
  "author": "@marcusoftnet - Marcus Hammarberg",
  "license": "MIT",
  "dependencies": {
    "co-body": "0.0.1",
    "co-monk": "^1.0.0",
    "co-views": "^2.0.0",
    "koa": "^0.5.5",
    "koa-basic-auth": "~1.1.1",
    "koa-logger": "^1.1.0",
    "koa-mount": "~1.2.5",
    "koa-route": "^1.0.2",
    "koa-static": "~1.4.3",
    "koa-static-cache": "~1.0.10",
    "monk": "^0.8.1",
    "nodemon": "^1.0.17",
    "swig": "^1.4.2",
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "co": "^3.0.0",
    "mocha": "*",
    "semver": "^5.0.1",
    "should": "*",
    "supertest": "*"
  },
  "engines": {
    "node": ">0.12.7"
  }
}
